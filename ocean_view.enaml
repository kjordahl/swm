from enaml.stdlib.fields import IntField

OceanView(MainWindow):
    attr model
    attr plot
    title = "Shallow Water Model"
    Container:
        constraints = [
            hbox(plot_window, controls),
            align('top', plot_window, controls),
            plot_window.height >= 600,
            plot_window.width >= 600,
        ]
        GroupBox:
            id: controls
            title = "controls"
            Label:
                text = "Latitude"
            IntField:
                id: lat
                value := model.lat
            Label:
                text << "Size of initial bump (*Rs):  %6.2f" % model.Lbump
            FloatSlider:
                minimum = 0.1
                maximum = 10.0
                value := model.Lbump
            Label:
                text << "Location of initial bump:  %6.2f" % model.Xbump
            FloatSlider:
                minimum = -1.0
                maximum = 1.0
                value := model.Xbump
            ToggleButton:
                text << model.run_text
                checked := model.running
        EnableCanvas:
            id: plot_window
            component = plot.get_plot_component()
